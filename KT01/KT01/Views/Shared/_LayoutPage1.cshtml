<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!--Bootstrap 4-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: #003;
            color: #fff;
        }

        nav div ul li a:hover {
            color: #090;
        }
    </style>
</head>
<body>
    <div id="Menu">
        <form action="/BaiHat/SearchByName" method="get">
            <nav class="navbar navbar-expand navbar-light" style="background-color:#003366">
                <div class="container">
                    <a class="navbar-brand" href="#"><img src="/Contents/Image_QLBH/logo.jpg" width="150" height="50" class="rounded" /></a>
                    @*<form action="" method="get">*@
                    <input class="form-control mx-auto w-50" type="text" id="txt_Search" name="txt_Search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success mx-5" type="submit">Search</button>
                    @*</form>*@
                    <a href="#" style="color:#FFF; font-weight:bold;" class="mx-2">Đăng Nhập </a> <span style="color:#FFF; font-weight:bold;" class="mx-2">/</span>
                    <a href="#" style="color:#FFF; font-weight:bold;" class="mx-2">Đăng Ký</a>
                </div>
            </nav>
            <nav class="navbar navbar-expand navbar-light" style="background-color:#003366; ">
                <div class=" container collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item mx-2">
                            <a class="nav-link active" aria-current="true" href="/BaiHat/Index" style="color:#CCC;"> Trang Chủ </a>

                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link active" aria-current="true" href="#" style="color:#CCC;"> Thể Loại </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link active" aria-current="true" href="/Album/Index" style="color:#CCC;"> AlBum </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link active" aria-current="true" href="#" style="color:#CCC;"> Nhạc sĩ </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link active" aria-current="true" href="#" style="color:#CCC;"> Tìm kiếm </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </form>
    </div>
    <div id="slideShow" class="row container carousel mx-auto mt-2 " data-ride="carousel">
        <div class="col-9 carousel-inner">

            <div class="carousel-item active">
                <img src="/Contents/Image_QLBH/Slide1.jpg" class="d-block w-100" height="250px" alt="Banner1" />
            </div>
            <div class="carousel-item">
                <img src="/Contents/Image_QLBH/Slide2.jpg" class="d-block w-100" height="250px" alt="Banner2" />
            </div>
            <div class="carousel-item">
                <img src="/Contents/Image_QLBH/Slide3.jpg" class="d-block w-100" height="250px" alt="Banner3" />
            </div>
            <div class="carousel-item">
                <img src="/Contents/Image_QLBH/Slide4.jpg" class="d-block w-100" height="250px" alt="Banner4" />
            </div>
            <div class="carousel-item">
                <img src="/Contents/Image_QLBH/Slide5.jpg" class="d-block w-100" height="250px" alt="Banner5" />
            </div>
            <a class="carousel-control-prev" href="#slideShow" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#slideShow" role="button" data-slide="next">
                <span class="carousel-control-next-icon " aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="col-3"> <img class="d-block" width="95%" height="250px" src="/Contents/Image_QLBH/BannerRight.jpg" /></div>
    </div>
    <div id="Content" class="container mt-2 mb-2">
        <div class="row">
            <div class="col-9">
                @RenderBody()          
            </div>
            <div class="col-3"><img src="/Contents/Image_QLBH/QC1.JPG" width="90%" height="350px" /></div>
        </div>
    </div>
    <div id="Footer" style="background-color:#003366">
        <table cellpadding="5px" class="container">
            <tr>
                <td valign="top"><img src="/Contents/Image_QLBH/logoFooter.jpg" style="width:90%" /></td>
                <td style="font-size:13px; color:#FFF">
